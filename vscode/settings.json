{
    /*
    |--------------------------------------------------------------------------
    | Better Defaults
    |--------------------------------------------------------------------------
    */
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.copyWithSyntaxHighlighting": false,
    // "editor.hideCursorInOverviewRuler": true,
    "editor.renderControlCharacters": false,
    "editor.emptySelectionClipboard": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.inlineSuggest.enabled": true,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.overviewRulerBorder": false,
    "editor.snippetSuggestions": "top",
    "editor.guides.indentation": false,
    "editor.selectionHighlight": false,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "none",
    "editor.lightbulb.enabled": "off",
    "editor.colorDecorators": false,
    "editor.minimap.enabled": false,
    "editor.matchBrackets": "never",
    "editor.hover.enabled": false,
    "editor.wordWrapColumn": 160,
    "editor.lineNumbers": "off",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "strings": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "git.decorations.enabled": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.activityBar.location": "hidden",
    "workbench.editor.enablePreview": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.editor.showTabs": "single",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "window.newWindowDimensions": "inherit",
    "window.commandCenter": false,
    "zenMode.centerLayout": false,
    "scm.diffDecorations": "none",
    "problems.decorations.enabled": false,
    /*
    |--------------------------------------------------------------------------
    | Theme
    |--------------------------------------------------------------------------
    */
    "workbench.colorTheme": "Catppuccin Macchiato",
    "workbench.iconTheme": "quill-icons",
    /*
    |--------------------------------------------------------------------------
    | Find
    |--------------------------------------------------------------------------
    */
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/vendor/{[^l],?[^ai]}*": true,
        "**/public/{[^i],?[^n]}*": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/_ide_helper_models.php": true,
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "storage": true,
        ".phpunit.result.cache": true,
        "_ide_helper.php": true,
        "_ide_helper_models.php": true,
        ".php_cs.cache": true,
        ".phpstorm.meta.php": true
    },
    /*
    |--------------------------------------------------------------------------
    | Terminal
    |--------------------------------------------------------------------------
    */
    "debug.terminal.clearBeforeReusing": true,
    "terminal.external.osxExec": "Ghostty.app",
    "terminal.integrated.scrollback": 1600,
    /*
    |--------------------------------------------------------------------------
    | General code & language config
    |--------------------------------------------------------------------------
    */
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?", // Include "-" in word selection.
    "html.format.wrapAttributes": "preserve",
    "html.format.wrapLineLength": 0,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "vue": "html",
        "x-script": "javascript",
        "blade.php": "html",
        "twig": "html"
    },
    "files.associations": {
        ".php_cs": "php",
        ".php_cs.dist": "php",
        "*.css": "tailwindcss",
        ".env*": "dotenv",
        ".pre": "php",
        "artisan": "php"
    },
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.includeLanguages": {
        "plaintext": "html"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    /*
    |--------------------------------------------------------------------------
    | PHP language config
    |--------------------------------------------------------------------------
    */
    "intelephense.completion.triggerParameterHints": true,
    "intelephense.completion.insertUseDeclaration": true,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
    "intelephense.trace.server": "messages",
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/storage",
        "**/storage/**",
        "**/tests/**",
        "**/resources/views/**",
        "**/database/migrations/**",
        "**/storage/framework/views/**",
        "_ide_helper.php",
        "_ide_helper_models"
    ],
    "[php]": {
        "editor.defaultFormatter": "open-southeners.laravel-pint"
    },
    /*
    |--------------------------------------------------------------------------
    | Testing
    |--------------------------------------------------------------------------
    */
    "better-phpunit.suiteSuffix": null,
    "better-phpunit.commandSuffix": "--stop-on-failure",
    /*
    |--------------------------------------------------------------------------
    | PHP JavaScript config
    |--------------------------------------------------------------------------
    */
    "importCost.javascriptExtensions": [
        "\\.jsx?$",
        "\\.vue?$"
    ],
    /*
    |--------------------------------------------------------------------------
    | Debugger
    |--------------------------------------------------------------------------
    */
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Listen for XDebug",
                "type": "php",
                "request": "launch",
                "port": 9003
            }
        ]
    },
    /*
    |--------------------------------------------------------------------------
    | Typography
    |--------------------------------------------------------------------------
    */
    "editor.fontFamily": "MonoLisa",
    "terminal.integrated.fontFamily": "Dank Mono",
    "editor.fontLigatures": "'calt' on, 'liga' on, 'zero' off, 'ss02' on, 'ss03' on, 'ss06' on, 'ss08' on, 'ss11' on",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.2,
    "editor.fontWeight": "400",
    "editor.suggestFontSize": 16,
    "editor.fontVariations": true,
    "editor.suggestLineHeight": 28,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontLigatures.featureSettings": "'calt' on",
    /*
    |--------------------------------------------------------------------------
    | Markdown
    |--------------------------------------------------------------------------
    */
    "markdown-preview-github-styles.colorTheme": "light",
    /*
    |--------------------------------------------------------------------------
    | Textmate rules | Optimize themes for Operator/Dank Mono
    |--------------------------------------------------------------------------
    */
    "editor.tokenColorCustomizations": {
        "[*Light*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#000"
                    }
                }
            ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        },
        "textMateRules": [
            {
                "name": "normalize font style of certain components",
                "scope": [
                    "entity.name.type.namespace",
                    "entity.other.inherited-class",
                    "keyboard.control",
                    "keyword.operator.arithmetic",
                    "keyword.operator.assignment",
                    "keyword.operator.bitwise",
                    "keyword.operator.comparison",
                    "keyword.operator.expression.in",
                    "keyword.operator.increment",
                    "keyword.operator.logical",
                    "keyword.operator.operator",
                    "keyword.operator.or.regexp",
                    "keyword.operator.ternary",
                    "keyword.operator.type",
                    "meta.property-list.css meta.property-value.css variable.other.less",
                    "meta.property-list.sass variable.sass",
                    "meta.property-list.scss variable.scss",
                    "meta.tag.js meta.embedded.expression.js punctuation.section.embedded.begin.js",
                    "meta.tag.js meta.embedded.expression.js punctuation.section.embedded.end.js",
                    "punctuation.definintion.string",
                    "punctuation.section.embedded.begin.js.jsx",
                    "punctuation.section.embedded.end.js.jsx",
                    "punctuation.section.embedded.js",
                    "punctuation",
                    "support.class",
                    "support.other"
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "name": "italicsify for operator mono",
                "scope": [
                    "assignment.coffee",
                    "comment support.class",
                    "comment support.other",
                    "comment",
                    "constant.language",
                    "constant.other.color.rgb-value.hex.css",
                    "constant.other.rgb-value.css",
                    "entity.name.function.ts",
                    "entity.name.function.tsx",
                    "entity.name.tag.custom",
                    "entity.name.tag.doctype",
                    "entity.name.tag.yaml",
                    "entity.name.type.ts",
                    "entity.other.attribute-name",
                    "italic",
                    "keyword.control",
                    "keyword.operator.expression.typeof",
                    "keyword.operator.type.annotation",
                    "keyword.other.unit",
                    "language",
                    "meta.export.js variable.other",
                    "meta.export.ts meta.block.ts variable.other.readwrite.alias.ts",
                    "meta.export.tsx meta.block.tsx variable.other.readwrite.alias.tsx",
                    "meta.import.js variable.other",
                    "meta.import.ts meta.block.ts variable.other.readwrite.alias.ts",
                    "meta.import.tsx meta.block.tsx variable.other.readwrite.alias.tsx",
                    "meta.object-literal.key",
                    "meta.parameter",
                    "meta.parameters",
                    "meta.tag.sgml.doctype.html",
                    "meta.tag.sgml.doctype",
                    "meta.var.expr storage.type",
                    "modifier",
                    "parameter",
                    "punctuation.section.embedded",
                    "quote",
                    "source.js.jsx keyword.control.flow.js",
                    "storage.type.class",
                    "storage",
                    "support.constant.math",
                    "support.constant.vendored.property-value.css",
                    "support.function.basic_functions",
                    "support.function.basic_functions",
                    "support.type.primitive",
                    "support.type.property-name.css",
                    "support.type.property.css",
                    "support.type.vendored.property-name.css",
                    "this",
                    "type .function",
                    "type.function",
                    "type.var",
                    "variable.assignment.coffee",
                    "variable.language",
                    "variable.object.property.js",
                    "variable.object.property.jsx",
                    "variable.object.property.ts",
                    "variable.object.property.tsx",
                    "variable.other.less",
                    "variable.parameter.url.sass",
                    "variable.parameter.url.scss",
                    "variable.parameter",
                    "variable.sass",
                    "variable.scss"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "composer.json": "composer.lock",
        "psalm.xml": "psalm-baseline.xml",
        ".php-cs-fixer.php": ".php-cs-fixer.cache",
        "phpunit.xml": ".phpunit.result.cache",
        "*.php": "${basename}Test.php"
    },
    "laravel-pint.enable": true
}
